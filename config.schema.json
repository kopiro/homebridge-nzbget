          },
          "username": {
            "title": "Username",
            "type": "string",
            "required": true,
            "description": "Set the instance username"
          },
          "password": {
            "title": "Password",
            "type": "string",
            "required": true,
            "description": "Set the instance password"
          },
          "rateMultiplier": {
